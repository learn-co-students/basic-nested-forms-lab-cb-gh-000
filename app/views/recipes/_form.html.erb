<%= form_for @recipe do |f| %>
  <%= f.label:title %>
  <%= f.text_field :title %>
  <ul>
    <%= f.fields_for :ingredients do |ingredient| %>
    <li>
      name: <%= ingredient.text_field :name, :class =>"name" %>
      qty: <%= ingredient.text_field :quantity %>
    </li>
    <% end %>
  </ul>
  <%= f.submit %>
<% end %>
